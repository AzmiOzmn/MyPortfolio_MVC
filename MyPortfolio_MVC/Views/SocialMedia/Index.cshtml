@model List<MyPortfolio_MVC.Models.TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Sosyal Medya</h2>
<br>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Sosyal Medya Adı</th>
        <th>URL</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaId</td>
            <td>@item.Name</td>
            <td>@item.Url</td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }






</table>
<br>
<a href="/SocialMedia/CreateSocialMedia" class="btn btn-success">Yeni Referans Ekle</a>
