@model MyPortfolio_MVC.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Sosyal Medya Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br>
    @Html.TextAreaFor(a=> a.Url , new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-success">Güncelle</button>







</form>

