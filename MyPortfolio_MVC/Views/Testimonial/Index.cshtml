@model List<MyPortfolio_MVC.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Referanslarım</h2>
<br>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th>Resim</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:100px" alt="Profil Resmi" /></td>
            <td>@item.Comment</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }






</table>
<br>
<a href="/Testimonial/CreateTestimonial" class="btn btn-success">Yeni Referans Ekle</a>
