@model List<MyPortfolio_MVC.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Banner</h2>
<br>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Göster</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BannerId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <!-- Checkbox: İşaretli veya işaretsiz olacak şekilde -->
                <input type="checkbox" @(item.IsShow.HasValue && item.IsShow.Value ? "checked=\"checked\"" : "") disabled />


            </td>
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<br>
<a href="/Banner/CreateBanner" class="btn btn-success">Yeni Banner Ekle</a>
